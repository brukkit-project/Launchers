// Общие настройки лаунчера:

{$DEFINE DETECT_JAVA_PATH}      // Автоопределение пути к Java
{$DEFINE MULTISERVER}           // Включить поддержку мультисерверности
  {$DEFINE LOCAL_SERVERS_LIST}  // Список серверов жёстко вшит в лаунчер
//{$DEFINE CUSTOM_JAVA}           // Использовать свою Java (должна быть в Main.zip)
{$DEFINE SALTED_HASH}           // Солить хэш клиента

// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

// Хэширование паролей, флаги можно комбинировать (идут по порядку исполнения):

//{$DEFINE MD5}
{$DEFINE DOUBLE_MD5} // Используется в DLE
//{$DEFINE SHA1}
//{$DEFINE SHA256}
//{$DEFINE SHA384}
//{$DEFINE SHA512}

// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

// Настройка защиты:

//{$DEFINE LAUNCH_PERIMETER}    // Включение антиотладочной защиты (СЗПУ "Периметр")

{$DEFINE CONTROL_PROCESSES}   // Запуск контролирующих процессов:
   {$DEFINE USE_INJECTORS}    //  - инъекторы
   {$DEFINE USE_WATCHDOG}     //  - следящий пёс

{$DEFINE BEACON}              // Маячок - проверка клиента во время игры
{$DEFINE EURISTIC_DEFENCE}    // Эвристический поиск параллельно запущенных клиентов


